{
	"name": "text-frequency-analysis",
	"productName": "textFrequencyAnalysis",
	"author": "Mohsen Khashei",
	"version": "1.0.0",
	"description": "This applicaton is for educational purpose. using Frequency Analysis for decipher text ",
	"main": "./core/main.js",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder",
		"postinstall": "install-app-deps",
		"build:mac": "electron-builder --mac",
		"build:win": "electron-builder --win",
		"build:linux": "electron-builder --linux",
		"rebuild": "electron-rebuild -f -w sqlite3"
	},
	"permissions": [
		"writeFile"
	],
	"build": {
		"appId": "com.frequencyAnalysis.app",
		"productName": "frequencyAnalysis",
		"directories": {
			"output": "build"
		},
		"mac": {
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64"
					]
				}
			],
			"icon": "assets/icon.png",
			"category": "public.app-category.education"
		},
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			],
			"icon": "assets/icon.png"
		},
		"linux": {
			"target": [
				{
					"target": "deb",
					"arch": [
						"x64"
					]
				},
				{
					"target": "AppImage",
					"arch": [
						"x64"
					]
				}
			],
			"icon": "assets/icon.png",
			"maintainer": "Mohsen",
			"vendor": "Mohsen",
			"synopsis": "textFrequencyAnalysis",
			"description": "textFrequencyAnalysis",
			"category": "education",
			"mimeTypes": ""
		}
	},
	"dependencies": {
		"electron-log": "^4.4.8"
	},
	"devDependencies": {
		"electron": "^24.1.2",
		"electron-builder": "^23.6.0"
	}
}
